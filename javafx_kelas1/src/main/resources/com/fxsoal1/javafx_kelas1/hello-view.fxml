<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fxsoal1.javafx_kelas1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Bilangan 1:" />
   <TextField fx:id="num1" />
   <Label fx:id="welcomeText1" text="Bilangan 2:" />
   <TextField fx:id="num2" />
   <Label fx:id="welcomeText11" text="Hasil:" />
   <TextField fx:id="count" />
   <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="btnSum" onAction="#sum" mnemonicParsing="false" text="+">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Button>
         <Button fx:id="btnMin" onAction="#min" mnemonicParsing="false" text="-">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Button>
         <Button fx:id="btnTimes" onAction="#times" mnemonicParsing="false" text="*">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Button>
         <Button fx:id="btnDiv" onAction="#div" mnemonicParsing="false" text="/">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Button>
      </children>
   </HBox>
</VBox>
